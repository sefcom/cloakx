{
    "web_accessible_resources": [
        "img/logo.png",
        "img/logo-lg.png"
    ],
    "browser_action": {
        "default_icon": "icon19.png",
        "default_popup": "popup.html"
    },
    "name": "Fretboard",
    "icons": {
        "128": "icon128.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "version": "1.0.1",
    "options_page": "options.html",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "js": [
                "onthefly_config.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "js": [
                "ontheflyDOM-hidex.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "http://*/*"
            ],
            "all_frames": true,
            "run_at": "document_end",
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "update_url": "https://clients2.google.com/service/update2/crx",
    "description": "A guitar chord guide for guitar players."
}