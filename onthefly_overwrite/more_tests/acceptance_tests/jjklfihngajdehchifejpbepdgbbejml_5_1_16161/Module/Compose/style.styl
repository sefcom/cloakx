.SEM-Compose .field-row .toggle {
	text-align: center;
}

.SEM-Compose .field-row .input {
	padding: 3px 8px;

	&.single {
		padding: 8px
	}

	input {
		font-family: Arial;
		display: inline-block;
		height: 24px;
		border: none;
		background: none;
		outline: none;
		-moz-box-shadow: none !important;
		-webkit-box-shadow: none !important;
		box-shadow: none !important;
		width 105px
		box-sizing: content-box !important;
	}

	textarea {
		font-family: Arial;
		display: block;
		width: 100%;
		height 32px;
		min-height: 70px;
		border: none;
		background: none;
		outline: none;
		overflow: hidden;

		-moz-box-shadow: none !important;
		-webkit-box-shadow: none !important;
		box-shadow: none !important;
	}
}

.SEM-Compose .top {
	vertical-align: middle;
}

.SEM-Compose .setting {
	border-bottom: 1px dashed #aaa;
	font-weight: normal;
	color: #999;
}

.SEM-Compose .field-row {
	border-bottom: 1px solid #eee;
}

.SEM-Compose .inputHolder {
	width: 100%;
	background: none;
	position: relative;
	min-height: 20px;
	overflow: hidden;
}

.SEM-Compose .inputTitle {
	float: left;
	height: 24px;
	line-height: 24px;
	margin: 7px 10px 0 0;
	font-weight: bold;
	cursor: pointer;
}

.SEM-Compose .row.subject {
	margin 0

	input#composeSubject {
		width: 100%;
		display: block !important;
		padding-left 0
	}
}

