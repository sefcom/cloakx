.SEM-Compose {
	width 100%
	height: 100% !important;
	position: absolute;
	overflow: hidden;

	@media screen and (max-width: $media_width_laptop) {
		left: 0 !important
		right: 0 !important
	}

	.msg-container {
		top 0
		bottom 0
		left 0
		right 0
		position absolute
	}

	.scrollable {
		top 0
		bottom 0
		left 0
		right 0
		position absolute
		display flex
		flex-direction column

		@media screen and (min-width: $media_width_tablet_landscape) {
			top 2.88em
		}
	}

	.toolbar-row {
		td {
			padding 0 !important
		}
	}

	input {
		margin-bottom 0
	}

	.compose-header {
		padding: 10px;
		color: #444;
		font-size: 1rem;
		font-weight: bold;
		visibility: hidden !important;
		display: none;
	}

	.save-draft-info {
		padding-top: 5px;
		text-align: right;
		color: #444;
		font-size: 0.8rem;

		@media screen and (max-width: $media_width_laptop_min_width_for_draft_label) {
			display: none !important;
		}
	}

	//table {
	//	width: 100%;
	//
	//	&.previous-thread-table {
	//		table-layout: fixed
	//	}
	//}

	.save-btn {
		display none
	}

	.compose-menu-wrap {
		min-height 53px
		height 53px

		@media screen and (max-width: $media_width_phone) {
			//min-height 105px
			//height 105px
		}
	}

	.scroll-docked-container {
		position relative
		display none
		z-index 1000
	}
}

