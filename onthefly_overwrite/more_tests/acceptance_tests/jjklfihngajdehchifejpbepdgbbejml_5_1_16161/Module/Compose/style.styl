.SEM-Compose .autocomplete-item {
	padding: 12px;
	font-size: 0.75rem;
	border-bottom: 1px solid #eee;
	cursor: pointer;
	clear: both;
	&.selected {
		background: #dddddd;
	}
	&:hover {
		background: #dddddd;
	}
}

.SEM-Compose .bubbleholder {
	display: inline-block;

	span.acBubble {
		display: inline-block;
		margin: 2px 4px 2px 0;
		padding: 5px 30px 5px 8px;
		background: #f6f6f6;
		border: 1px solid #ddd;
		border-radius: 3px;
		color: #444;
		font-size: 0.8571rem;
		position: relative;
		cursor: pointer;
	}

	span.acBubbleText {
		line-height: 1.429rem;
		word-break break-all;
		display: inline-block;
		max-width: 180px;
		overflow: hidden;
	}
}

.SEM-Compose .acBubbleClose {
	width: 30px;
	color: #999;
	line-height: 10px;
	padding: 4px 2px;
	top: 0;
	right: 0;
	bottom: 0;
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;

	&:before {
		font-size: 16px;
	}
}

.SEM-Compose .toggle-td {
	padding: 0 7px 0 0 !important;
	vertical-align: top !important;

	@media screen and (max-width: $media_width_phone_portrait) {
		width: 128px;
	}

	.actionbtn {
		span {
			margin-left 0.3em !important
		}

		&:last-child {
			margin-right 0 !important
		}
	}
}

.SEM-Compose .optionToggle {
	vertical-align: middle;
	background: rgba(0, 0, 0, 0.1);
	text-transform: uppercase;
	font-size: 0.75rem;

	img {
		margin-top: 4px;
	}
}

.SEM-Compose .previous-thread {
	display: none;
	background: #EFEFEF;
	font-size: 0.9rem;
	color: #333;
}

.SEM-Compose .previous-thread-txt {
	text-align: center;
	padding: 5px 0;
}

.SEM-Compose .previous-thread-body {
	padding: 5px 10px;
	overflow: hidden;
	word-wrap: break-word;
}

.SEM-Compose .compose-actionbar {
	&.toolbar {
		padding-left 0 !important

		&.show-desktop.show-laptop {
			margin-bottom 20px
		}

		@media screen and (max-width: $media_width_tablet_landscape) {
		invertColors()
	}

	@media screen and (max-width: $media_width_laptop) {
		.save-draft-container {
			white-space nowrap
		}
	}

	.save-draft-info {
		opacity 0.5 !important
	}
}

}

.SEM-Compose .no-msg {
	color: #999;
	margin: 16px;
}

#error-msg-container .autocomplete-item,
.error-msg-container .autocomplete-item {
	line-height 26px
	/*margin: 10px 0;*/
	text-align left
	clear both

	.checkbox {
		float: left;
	}

	.autocomplete-name {
		margin-left: 27px;
	}
}

