#account-settings{
    .btn-group{
        margin-bottom: 1em !important;
    }
}

.SEM-Account .tab-holder{
	margin-bottom: 0;
	border-top: none;
}

.SEM-Account .account-tab-holder{
    position: relative;
}

.SEM-Account
	#tab-preference
		>.row
			.form
				/*border: 1px solid red;*/
				height: 19em
				&.auto-height
					height: auto

